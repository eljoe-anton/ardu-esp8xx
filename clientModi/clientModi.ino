#include <ArduinoWebsockets.h>
#include <ESP8266WiFi.h>

const char* ssid = "nopalin_lab"; //Enter SSID
const char* password = "l1234567890"; //Enter Password
const char* websockets_server_host = "192.168.200.212"; //Enter server adress
const uint16_t websockets_server_port = 8088; // Enter server port

//const char* ssid = "ssid"; //Enter SSID
